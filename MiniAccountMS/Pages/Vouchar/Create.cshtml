@page
@model MiniAccountMS.Pages.Vouchar.CreateModel

<h2>Create Voucher</h2>

<form method="post">
    <div class="form-group">
        <label>Type</label>
        <input asp-for="Voucher.Type" class="form-control" />
    </div>
    <div class="form-group">
        <label>Date</label>
        <input asp-for="Voucher.Date" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Reference No</label>
        <input asp-for="Voucher.ReferenceNo" class="form-control" />
    </div>

    <h4>Voucher Items</h4>
    @for (int i = 0; i < Model.Voucher.Items.Count; i++)
    {
        <div class="form-row">
            <div class="col">
                <label>Account ID</label>
                <input asp-for="Voucher.Items[@i].AccountId" class="form-control" />
            </div>
            <div class="col">
                <label>Debit</label>
                <input asp-for="Voucher.Items[@i].Debit" class="form-control" />
            </div>
            <div class="col">
                <label>Credit</label>
                <input asp-for="Voucher.Items[@i].Credit" class="form-control" />
            </div>
            <div class="col">
                <label>Description</label>
                <input asp-for="Voucher.Items[@i].Description" class="form-control" />
            </div>
        </div>
        <hr />
    }

    <button type="submit" class="btn btn-success">Save Voucher</button>
</form>
