@page
@model MiniAccountMS.Pages.Admin.ManagePermissionsModel

<h2>Manage Role Permissions</h2>

<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input asp-for="RoleId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Module Name</label>
        <input asp-for="ModuleName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Can Access</label>
        <input asp-for="CanAccess" type="checkbox" class="form-check-input" />
    </div>

    <button type="submit" class="btn btn-primary">Assign Permission</button>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}

